<div class="container" style="padding-top:70px;">
	<div class="card" style="width: 30rem;">
		<div class="card-header">
			Rekap Kuliah per Pertemuan
		</div>
	  	<div class="card-body">
	    	<form method="POST" action="/rekapkuliahpertemuan">
			  	
			  	<div class="row">
			  		<div class="col">
			  			<div class="form-group">
							<label for="id">ID Mata Kuliah</label>
							<input type="text" class="form-control" id="id" aria-describedby="id" placeholder="ID Mata Kuliah" name="kodeMatkul" >
							<small id="id" class="form-text text-muted">Contoh: IF5</small>
						</div>
			  		</div>
			  		<div class="col">
			  			<div class="form-group">
					   		<label for="pertemuan">Pertemuan Ke</label>
					    	<input type="number" class="form-control" id="pertemuan" aria-describedby="pertemuan" placeholder="Pertemuan Ke" name="pertemuan" value="1" min="1" max="16">
					    	<small id="pertemuan" class="form-text text-muted">Isi dengan angka 1 - 16</small>
					  	</div>
			  		</div>
			  	</div>
			  	<button type="submit" class="btn btn-primary">Submit</button>
			</form>
	  	</div>
	  	<div class="card-footer">

	  	</div>
	</div>
</div>