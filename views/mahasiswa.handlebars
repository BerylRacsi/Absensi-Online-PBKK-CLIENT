<style type="text/css">
  .container {
    display: flex;
  justify-content: center;
  flex-direction: row;
  }
</style>

{{#if message includeZero=true}}
	<div class="alert alert-success text-center" role="alert">
	  {{message}}
	</div>
{{/if}}

<div class="container" style="padding-top:70px;">
	<div class="card" style="width: 30rem;">
		<div class="card-header">
			Tambah User Mahasiswa Baru
		</div>
	  	<div class="card-body">
	    	<form method="POST" action="/tambahmahasiswa">
			  	<div class="form-group">
			   		<label for="nama">Nama Mahasiswa</label>
			    	<input type="text" class="form-control" id="nama" aria-describedby="nama" placeholder="Nama" name="name">
			  	</div>
			  	<div class="form-group">
			   		<label for="nrp">Nomor Registrasi Peserta</label>
			    	<input type="text" class="form-control" id="nrp" aria-describedby="nrp" placeholder="NRP" name="nrp">
			    	<small id="nrp" class="form-text text-muted">Contoh: 5115100064</small>
			  	</div>
			  	<div class="form-group">
			   		<label for="password">Password</label>
			    	<input type="password" class="form-control" id="password" placeholder="Password" name="password">
			  	</div>
			  	<button type="submit" class="btn btn-primary">Submit</button>
			</form>
	  	</div>
	  	<div class="card-footer">

	  	</div>
	</div>
</div>