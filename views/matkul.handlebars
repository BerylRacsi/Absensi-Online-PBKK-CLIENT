<style type="text/css">
  .container {
    display: flex;
  justify-content: center;
  flex-direction: row;
  }
</style>

{{#if message includeZero=true}}
	<div class="alert alert-success text-center" role="alert">
	  {{message}}
	</div>
{{/if}}

<div class="container" style="padding-top:70px;">
	<div class="card" style="width: 30rem;">
		<div class="card-header">
			Tambah Mata Kuliah Baru
		</div>
	  	<div class="card-body">
	    	<form method="POST" action="/tambahmatkul">
			  	
			  	<div class="form-group">
			   		<label for="nama">Nama Mata Kuliah</label>
			    	<input type="text" class="form-control" id="nama" aria-describedby="nama" placeholder="Nama Mata Kuliah" name="name">
			  	</div>
			  	<div class="form-group">
					<label for="id">ID Mata Kuliah</label>
					    <input type="text" class="form-control" id="id" aria-describedby="id" placeholder="ID Mata Kuliah" name="kodeMatkul" >
					    <small id="id" class="form-text text-muted">Contoh: IF5</small>
				</div>
			  	<div class="row">
			  		<div class="col">
			  			<div class="form-group">
					   		<label for="semester">Semester</label>
					   		<input type="number" name="semester" class="form-control" value="1" min="1" max="8">
					   		<small id="semester" class="form-text text-muted">Isi dengan angka 1 - 8</small>
					  	</div>
			  		</div>
			  		<div class="col">
			  			<div class="form-group">
					   		<label for="kelas">Kelas</label>
					    	<select class="form-control" id="kelas" name="kelas">
					    		<option disabled selected>Pilih Kelas</option>
						      	<option>A</option>
						      	<option>B</option>
						      	<option>C</option>
						      	<option>D</option>
						      	<option>E</option>
						      	<option>F</option>
						      	<option>G</option>
						    </select>
					  	</div>
			  		</div>
			  	</div>
			  	
			  	
			  	<button type="submit" class="btn btn-primary">Submit</button>
			</form>
	  	</div>
	  	<div class="card-footer">

	  	</div>
	</div>
</div>